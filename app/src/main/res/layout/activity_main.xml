<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/my_layout">

    <TextView android:text="@string/my_title" android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:id="@+id/my_title"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        style="@style/CustomButton"
        android:text="@string/media_streamer"
        android:id="@+id/mediaStreamer"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/my_title"
        android:layout_alignLeft="@+id/scoresApp"
        android:layout_alignStart="@+id/scoresApp"
        android:onClick="mediaStreamer" />

    <Button
        style="@style/CustomButton"
        android:text="@string/super_duo1"
        android:id="@+id/scoresApp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/mediaStreamer"
        android:layout_centerHorizontal="true"
        android:onClick="scoresApp" />

    <Button
        style="@style/CustomButton"
        android:text="@string/super_duo2"
        android:id="@+id/libraryApp"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/scoresApp"
        android:layout_centerHorizontal="true"
        android:onClick="libraryApp" />

    <Button
        style="@style/CustomButton"
        android:text="@string/ant_terminator"
        android:id="@+id/buildItBigger"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/libraryApp"
        android:layout_alignLeft="@+id/libraryApp"
        android:layout_alignStart="@+id/libraryApp"
        android:onClick="buildItBigger" />

    <Button
        style="@style/CustomButton"
        android:text="@string/materialize"
        android:id="@+id/baconReader"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/buildItBigger"
        android:layout_centerHorizontal="true"
        android:onClick="baconReader" />

    <Button
        style="@style/CustomButton"
        android:text="@string/capstone"
        android:id="@+id/capstone"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/baconReader"
        android:layout_centerHorizontal="true"
        android:background="@drawable/capstone_custom"
        android:onClick="capstone" />

</RelativeLayout>
